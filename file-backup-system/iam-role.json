{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "ReadFromSource",
			"Effect": "Allow",
			"Action": [
				"s3:GetObject",
				"s3:GetObjectVersion"
			],
			"Resource": "arn:aws:s3:::<S3_BUCKET_SOURCE>/*"
		},
		{
			"Sid": "WriteToBackup",
			"Effect": "Allow",
			"Action": [
				"s3:PutObject",
				"s3:GetObject",
				"s3:ListBucket"
			],
			"Resource": [
				"arn:aws:s3:::<S3_BUCKET_DESTINATION>/*",
				"arn:aws:s3:::<S3_BUCKET_DESTINATION>"
			]
		},
		{
			"Sid": "PublishNotifications",
			"Effect": "Allow",
			"Action": "sns:Publish",
			"Resource": "arn:aws:sns:<REGION>:<ACCOUNT_ID>:FileBackupNotifications"
		}
	]
}